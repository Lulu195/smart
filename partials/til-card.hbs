<div data-date='{{date format='YY'}}'>
  <h2 class='sm-micro-heading'>{{date format='YYYY'}}</h2>
  <article class='sm-micro-article'>
    <a href='{{url}}'>
      <h3>{{title}} <span>{{primary_tag.name}}</span></h3>
      <div class='sm-micro-date'>
        <p class='sm-micro-month'>{{date format='MMM'}}</p>
        <p class='sm-micro-day'>{{date format='DD'}}</p>
      </div>
      <p class='sm-micro-excerpt'>{{excerpt}}</p>
    </a>
  </article>
</div>